{
    "$schema": "https://raw.githubusercontent.com/crossbario/crossbar/master/crossbar.json",
    "version": 2,
    "controller": {
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "backend",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "frontend",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": false,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                },
                                {
                                    "uri": "nntin.github.discordwebbridge.*",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": true
                                    }
                                },
                                {
                                    "uri": "wamp.subscription.get_events",
                                    "allow": {
                                        "call": true
                                    }
                                }
                            ]
                        }
                    ],
                    "store": {
                        "type": "memory",
                        "event-history": [
                            {
                                "uri": "nntin.github.discordwebbridge.channel.398907517326852097.messages",
                                "limit": 50
                            }
                        ]
                    }
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "interface": "0.0.0.0",
                        "type": "tcp",
                        "port": 8080,
                        "tls": {
                            "key": "/etc/letsencrypt/live/dwb.nntin.xyz/privkey.pem",
                            "certificate": "/etc/letsencrypt/live/dwb.nntin.xyz/cert.pem",
                            "chain_certificates": ["/etc/letsencrypt/live/dwb.nntin.xyz/chain.pem"],
                            "dhparam": "/etc/letsencrypt/live/dwb.nntin.xyz/dhparam.pem",
                            "ciphers": "ECDHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA256:"
                        }
                    },
                    "paths": {
                        "info": {
                            "type": "nodeinfo"
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "wampcra": {
                                    "type": "static",
                                    "users": {
                                        "backend": {
                                            "secret": "12345",
                                            "role": "backend"
                                        }
                                    }
                                },
                                "anonymous": {
                                    "type": "static",
                                    "role": "frontend"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}
